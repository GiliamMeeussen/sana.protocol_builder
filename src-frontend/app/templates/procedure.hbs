<div class="container-fluid">
    <div class="row">
    <h1>{{title}}</h1>
    <ul class="procedure">
        <li><a class="add-page" {{action 'addPage' 0}}>+</a></li>
        {{#each page in pages}}
            <li class="page-template">
                <a class="open-page" {{action 'editPage' page}}>
                    <span class="drag-handle octicon octicon-three-bars"></span>
                    <span class="page-label">Page {{page.displayIndex}}</span>
                    <span class="add-condition mega-octicon octicon-squirrel"></span>
                    <span class="delete-page mega-octicon octicon-trashcan" {{action 'deletePage' page}}></span>
                </a>
                <a class="add-page" {{action 'addPage' page.displayIndex}}>+</a>
            </li>
        {{/each}}
    </ul>
  </div>
</div>
